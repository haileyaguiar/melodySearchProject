    <script>
        function sendData() {
            var data = $('#inputData').val();
            $.ajax({
                url: '@Url.Action("SendData", "Home")',
                type: 'POST',
                data: { inputData: data },
                success: function (response) {
                    $('#responseContainer').html('<p>Response from Java Server: ' + response + '</p>');
                },
                error: function () {
                    $('#responseContainer').html('<p>Error occurred while sending data to Java server.</p>');
                }
            });
        }
    </script>
}