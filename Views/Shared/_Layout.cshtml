<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>airs connus</title>
    <link href="~/css/site.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!--This is what is making the css not work: -->
    <script src="https://www.verovio.org/javascript/latest/verovio-toolkit.js"></script>

    <script src="~/lib/jquery/dist/jquery-3.6.0.min.js"></script>
</head>
<body>
    <div class="navbar" style="position: relative; display: flex; align-items: center; height: 100px; padding: 0 20px; background-image: url('/lib/img/Web_Banner.png'); background-size: cover; background-position: center;">
        <!-- Home Icon on the left -->
        <a asp-area="" asp-controller="Home" asp-action="Index" style="color: darkblue; text-decoration: none; position: absolute; left: 20px;">
            <i class="fas fa-home" style="font-size: 24px;"></i>
        </a>

        <!-- Right Text -->
        <h1 style="margin: 0; width: 100%; text-align: right;">
            <a asp-area="" asp-controller="Home" asp-action="Index" style="color: darkblue; text-decoration: none;">
                The <i>airs connus</i> Index
            </a>
        </h1>
    </div>


    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <p style="margin-left: 100px;">Notation generated and rendered with <a href="https://github.com/rism-digital/verovio" id="version">Verovio</a></p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
